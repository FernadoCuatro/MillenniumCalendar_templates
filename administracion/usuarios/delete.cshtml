@model MillenniumCalendar.SP_buscar_administrador_idResult

@{
    Layout = "~/Views/Shared/Layout_2.cshtml";
    ViewBag.eliminar = @Html.DisplayFor(model => model.nombre);
    ViewBag.estado = @Html.DisplayFor(model => model.estado_administrador);
    ViewBag.estado_login = @Html.DisplayFor(model => model.estado_login);
}

<div>
    <h4 class="text-center">Inhabilitar administrador</h4>
    <h5 class="text-center">¿Está seguro que desea inhabilitar el registro de <span class="nombre-eliminar">@ViewBag.eliminar</span>?</h5>
    <hr />

    <div class="cont-eliminar">
        <dl class="dl-horizontal">
            <dt>
                Nombre completo:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nombre) @Html.DisplayFor(model => model.apellido)
            </dd>

            <dt>
                Correo electrónico:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.correo)
            </dd>

            <dt>
                Estado administrador:
            </dt>

            <dd>
                @{
                    if (ViewBag.estado.ToString() == "A ")
                    {
                        @Html.DisplayName("Activo");
                    }
                    else
                    {
                        @Html.DisplayName("Inactivo");
                    }
                }
            </dd>

            <dt>
                Estado del login:
            </dt>

            <dd>
                @{
                    if (ViewBag.estado_login.ToString() == "A ")
                    {
                        @Html.DisplayName("Activo");
                    }
                    else
                    {
                        @Html.DisplayName("Inactivo");
                    }
                }
            </dd>

        </dl>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a listar todo los administradores", "Index", "Usuarios")
        </div>
    }
</div>
